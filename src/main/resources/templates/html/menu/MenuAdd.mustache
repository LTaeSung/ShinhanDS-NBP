            border-radius: 10px;
            width: 1000px;
            font-family: 'Noto Sans KR', sans-serif;
            font-size: 30px;
        }
        .image h2{
            text-align:left;
            font-family: 'Noto Sans KR', sans-serif;
            font-size: 30px;
        }
        #menu1_name{
            background-color: oldlace;
            width: 250px;
            height: 25px;
            margin-left: 10px;
            font-size: large;
        }
        #menu1_price{
            background-color: oldlace;
            width: 250px;
            height: 25px;
            margin-left: 10px;
            font-size: large;
        }
        #menu1_context{
            background-color: oldlace;
            margin-left: 10px;
            font-size: large;
        }
        .image{
            /* border: 1px solid black;
            border-radius: 10px; */
            margin-left: 20px;
            border-bottom: 1px solid black;
            width: 1000px;
            font-family: 'Noto Sans KR', sans-serif;
            /* font-size: 30px; */
        }
        #btn_addmenu{
