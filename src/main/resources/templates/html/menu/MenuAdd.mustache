            font-family: 'Noto Sans KR', sans-serif;
        }
        #btn_menu{
            width: 100px;
            height: 30px;
            font-size: large;
            background-color: orange;
            border-radius: 10px;
            margin-left: 50px;

        }
        .menu1{
            /* border: 1px solid black; */
